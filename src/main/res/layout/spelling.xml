<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ImageView android:id="@+id/spelling_view_image"
        android:src="@drawable/cat"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:paddingLeft="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView android:id="@+id/spelling_view_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:textSize="100dp"/>

        <TextView android:id="@+id/spelling_view_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:textSize="100dp"/>

        <TextView android:id="@+id/spelling_view_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:textSize="100dp"/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="30dp"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/spelling_view_choice_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="100dp"/>

        <TextView android:id="@+id/spelling_view_choice_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="100dp"/>

        <TextView android:id="@+id/spelling_view_choice_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="100dp"/>

    </LinearLayout>

</LinearLayout>